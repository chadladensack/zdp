{
    "name": "zDP (Zend Debugger and Profiler)",
    "version": "1.0",
    "manifest_version": 2,
    
    "description": "Debug and Profiler extension for Zend Debugger",
    
    "background": {
        "scripts": [
            "js/vendor/jquery.js",
            "js/vendor/uri.js",
            "js/appSettings.js",
            "js/appCookie.js",
            "js/zendCookie.js",
            "js/zendBackground.js"
        ],
        "persistent": false
    },
  
    "browser_action": {
        "default_icon": "/img/ico-off.png",
        "default_popup": "popup.html"
    },
    
    "options_page": "options.html",
    
    "permissions": [
        "cookies",
        "tabs",
        "http://*/"
    ]
}
